<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/bulge_layout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="76dp"
        android:clickable="false"
        android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/bulge_fun1_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/beauty_chin_btn_checked"
                    android:background="@color/cardview_shadow_start_color"/>

                <ImageButton
                    android:id="@+id/bulge_fun2_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/beauty_chin_btn_checked"
                    android:background="@color/cardview_shadow_start_color" />
                <ImageButton
                    android:id="@+id/bulge_fun3_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/beauty_chin_btn_checked"
                    android:background="@color/cardview_shadow_start_color" />
                <ImageButton
                    android:id="@+id/bulge_fun4_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/beauty_chin_btn_checked"
                    android:background="@color/cardview_shadow_start_color"/>
                <ImageButton
                    android:id="@+id/bulge_fun5_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/beauty_chin_btn_checked"
                    android:background="@color/cardview_shadow_start_color" />
                <ImageButton
                    android:id="@+id/bulge_fun6_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/beauty_chin_btn_checked"
                    android:background="@color/cardview_shadow_start_color"/>
            </LinearLayout>

    </RelativeLayout>

        <Button
            android:id="@+id/close_bulge_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@id/bulge_layout_container"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_delete_icon"/>

</RelativeLayout>
